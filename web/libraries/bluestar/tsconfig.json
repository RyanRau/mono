{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "outDir": "dist"
  },
  "include": ["src", "src/index.ts"],
  "exclude": ["dist", "node_modules"]
}
